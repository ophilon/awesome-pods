.PHONY: help build up down clean stop restart logs test ps stats shell
help:
	@echo "make sure you in proper docker context: ${DKR_CONTEXT}\n"
	docker context use ${DKR_CONTEXT}
	docker context ls 
	@echo "make_compose avalable targets:\n"
	@make -pRrq 2>/dev/null|grep -v ^Makefile|grep -P '^\w+:'|sort
build: main.go make_pods
	docker compose build
up: build down
	docker compose up -d
clean:
	docker system prune -f
commit: test
	git branch -v
	@read -p "Enter commit message:" mesg;\
	git commit -am "$$mesg"
	git push
down:
	docker compose down -v
stop:
	docker compose stop
restart:
	docker compose stop
	docker compose up -d
logs:
	docker compose logs
test:
	curl ${DKR_CONTEXT}:8080
ps:
	docker compose ps -a
stats:
	docker compose stats --no-stream
shell:
	docker exec -ti traefik /bin/sh
